<!--Puts in the @task var which it gets from either show or edit
pages, and inputs it into this form, then performs each method on it -->
<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

     <%= f.input :content, label: false, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Write your goals/plans/activies." %>
    
  

  
    <%= f.button :submit, class: "btn btn-lg btn-primary btn-block"%>

<% end %>
